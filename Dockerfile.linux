# Dockerfile.linux
# Build environment for Linux and Windows artifacts using Wails

FROM golang:1.21-bullseye

# Install system dependencies
# - libgtk-3-dev, libwebkit2gtk-4.0-dev: linux native deps
# - nsis: for windows installer generation
# - nodejs, npm: for frontend build
# - dpkg, fakeroot: for .deb package creation
RUN apt-get update && apt-get install -y \
    libgtk-3-dev \
    libwebkit2gtk-4.0-dev \
    nsis \
    curl \
    dpkg \
    fakeroot \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (v18)
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs

# Install Wails
RUN go install github.com/wailsapp/wails/v2/cmd/wails@latest

# Set working directory
WORKDIR /app

# The entrypoint will be overridden or we set default to run the build script
# We assume the host project is mounted to /app
CMD ["./build_release.sh", "linux-docker"]
